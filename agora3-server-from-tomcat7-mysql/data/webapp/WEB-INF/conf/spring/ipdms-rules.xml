<?xml version="1.0" encoding="UTF-8"?>
<beans 	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:util="http://www.springframework.org/schema/util"
 		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
 							http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<!-- 
		This will createDTO a rule engine from a DRL file inside webapp to
		check access rights from users to Documento
	 -->
	<bean id="documentAccessRuleEngine" class="com.sinfic.ipdms.integration.drools.StatelessRuleEngineImpl">
 		<constructor-arg><util:constant static-field="org.drools.builder.ResourceType.DRL" /></constructor-arg>
 		<constructor-arg>
 			<value>WEB-INF/conf/rules/documentoAccessRules.drl</value>
 		</constructor-arg>
 	</bean>
 	
 	<!-- 
		This will createDTO a rule engine from a DRL file inside webapp to
		check access rights from users to ServicoOnline
	 -->
 	<bean id="servicoOnlineAccessRuleEngine" class="com.sinfic.ipdms.integration.drools.StatelessRuleEngineImpl">
 		<constructor-arg><util:constant static-field="org.drools.builder.ResourceType.DRL" /></constructor-arg>
 		<constructor-arg>
 			<value>WEB-INF/conf/rules/servicoOnlineAccessRules.drl</value>
 		</constructor-arg>
 	</bean>

	<!-- 
		This will createDTO a rule engine from a DRL file inside webapp to
		check rights from users to lock/unlock a documento
	 -->
 	<bean id="documentoLockRuleEngine" class="com.sinfic.ipdms.integration.drools.StatelessRuleEngineImpl">
 		<constructor-arg><util:constant static-field="org.drools.builder.ResourceType.DRL" /></constructor-arg>
 		<constructor-arg>
 			<value>WEB-INF/conf/rules/documentoLockRules.drl</value>
 		</constructor-arg>
 	</bean>

