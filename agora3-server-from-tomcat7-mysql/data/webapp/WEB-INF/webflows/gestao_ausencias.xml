<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
  						http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">
	<start-actions>
		<action bean="gestaoAusenciasFormAction" method="setupForm" />
		<action bean="flowUtils" method="establishReferer" />
	</start-actions>
	
	<start-state idref="gestaoAusencias.inicio" />
	
	<!-- 1. Dados da Ausencia (Ausente, requerente, subsitutos, datas...) -->
	<view-state id="gestaoAusencias.inicio" view="ipdms.gestaoAusencias.inicio">
		<transition on="next" to="gestaoAusencias.preencherDocumentos">
			<action bean="gestaoAusenciasFormAction" method="bindAndValidate">
				<attribute name="validatorMethod" value="validarAusencia" />
			</action>
		</transition>
	</view-state>
	
	<!-- 2. Anexos da Ausencia  -->
	<view-state id="gestaoAusencias.preencherDocumentos" view="ipdms.gestaoAusencias.anexos">
		<entry-actions>
			<action bean="gestaoAusenciasFormAction" method="setupAnexos"/>
		</entry-actions>
		<transition on="back" to="gestaoAusencias.inicio">
			<action bean="gestaoAusenciasFormAction" method="bind" />
		</transition>
   		<transition on="next" to="gestaoAusencias.processarDocumentos" />
   		<transition on="add" to="gestaoAusencias.preencherAdicionarDocumentos" />
   		<transition on="delete" to="gestaoAusencias.preencherDocumentos">
   			<action bean="gestaoAusenciasFormAction" method="deleteDocumentosAnexados" />
   		</transition>
   		<transition on="recover" to="gestaoAusencias.preencherDocumentos">
   			<action bean="gestaoAusenciasFormAction" method="recoverDocumentosAnexados" />
   		</transition>
	</view-state>
	<action-state id="gestaoAusencias.processarDocumentos">
		<action bean="gestaoAusenciasFormAction" method="uploadFiles" />
		<transition on="success" to="gestaoAusencias.resumo">
			<action bean="gestaoAusenciasFormAction" method="bind" />
		</transition>
		<transition on="error" to="gestaoAusencias.preencherDocumentos" />
		<transition on="dirs-nok" to="servicoindisponivel" />
	</action-state>
	<action-state id="gestaoAusencias.preencherAdicionarDocumentos">
		<action bean="gestaoAusenciasFormAction" method="uploadFiles" />
		<transition on="success" to="gestaoAusencias.preencherDocumentos" />
		<transition on="error" to="gestaoAusencias.preencherDocumentos" />
		<transition on="dirs-nok" to="servicoindisponivel" />
		<transition on-exception="java.lang.OutOfMemoryError" to="servicoindisponivel" />
	</action-state>
	
	<!-- 3. Resumo da Ausencia  -->
	<view-state id="gestaoAusencias.resumo" view="ipdms.gestaoAusencias.resumo">
		<transition on="prev" to="gestaoAusencias.preencherDocumentos"><!-- gestaoAusencias.adicionarDocumentos -->
			<action bean="gestaoAusenciasFormAction" method="bind" />
		</transition>
		<transition on="next" to="gestaoAusencias.gravar" />
	</view-state>
	
	<!-- 4. Gravação da Ausencia  -->
	<action-state id="gestaoAusencias.gravar">
		<action bean="gestaoAusenciasFormAction" method="save" /><!-- suspend -->
		<transition on="success" to="gestaoAusencias.relatorio"/>
		<transition on="save-error" to="gestaoAusencias.erro"/>
		<transition on="error" to="gestaoAusencias.erro"/>
	</action-state>
	
	<!-- 5. Relatório da Ausencia  -->
	<view-state id="gestaoAusencias.relatorio"  view="ipdms.gestaoAusencias.relatorio" >
		<transition on="next" to="gestaoAusencias.concluir">
			<action bean="gestaoAusenciasFormAction" method="bind" />
		</transition>
	</view-state>
	
	<!-- ECRÃS FINAIS -->
	<end-state id="gestaoAusencias.concluir" view="externalRedirect:${flowScope.referer}" />
	<end-state id="gestaoAusencias.cancelar" view="externalRedirect:${flowScope.referer}" />
	<end-state id="gestaoAusencias.erro" view="ipdms.error.default" />
	
	<global-transitions>
		<transition on="cancel" to="gestaoAusencias.cancelar" />
	</global-transitions>
	
</flow>