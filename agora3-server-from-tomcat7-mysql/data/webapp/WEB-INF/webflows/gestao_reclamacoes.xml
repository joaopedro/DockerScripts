<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
  						http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">
	<start-actions>
		<action bean="gestaoReclamacoesFormAction" method="setupForm" />
		<action bean="flowUtils" method="establishReferer" />
	</start-actions>
	
	<start-state idref="gestaoReclamacoes.inicio" />
	
	<!-- 1. Dados da Reclamacao (Organica, Descrição) -->
	<view-state id="gestaoReclamacoes.inicio" view="ipdms.gestaoReclamacoes.inicio">
		<transition on="next" to="gestaoReclamacoes.preencherDocumentos">
			<action bean="gestaoReclamacoesFormAction" method="bindAndValidate">
				<attribute name="validatorMethod" value="validarReclamacao" />
			</action>
		</transition>
	</view-state>
	
	<!-- 2. Anexos da Reclamacao  -->
	<view-state id="gestaoReclamacoes.preencherDocumentos" view="ipdms.gestaoReclamacoes.anexos">
		<entry-actions>
			<action bean="gestaoReclamacoesFormAction" method="setupAnexos"/>
		</entry-actions>
		<transition on="back" to="gestaoReclamacoes.inicio">
			<action bean="gestaoReclamacoesFormAction" method="bind" />
		</transition>
   		<transition on="next" to="gestaoReclamacoes.processarDocumentos" />
   		<transition on="add" to="gestaoReclamacoes.preencherAdicionarDocumentos" />
   		<transition on="delete" to="gestaoReclamacoes.preencherDocumentos">
   			<action bean="gestaoReclamacoesFormAction" method="deleteDocumentosAnexados" />
   		</transition>
   		<transition on="recover" to="gestaoReclamacoes.preencherDocumentos">
   			<action bean="gestaoReclamacoesFormAction" method="recoverDocumentosAnexados" />
   		</transition>
	</view-state>
	<action-state id="gestaoReclamacoes.processarDocumentos">
		<action bean="gestaoReclamacoesFormAction" method="uploadFiles" />
		<transition on="success" to="gestaoReclamacoes.resumo">
			<action bean="gestaoReclamacoesFormAction" method="bind" />
		</transition>
		<transition on="error" to="gestaoReclamacoes.preencherDocumentos" />
		<transition on="dirs-nok" to="servicoindisponivel" />
	</action-state>
	<action-state id="gestaoReclamacoes.preencherAdicionarDocumentos">
		<action bean="gestaoReclamacoesFormAction" method="uploadFiles" />
		<transition on="success" to="gestaoReclamacoes.preencherDocumentos" />
		<transition on="error" to="gestaoReclamacoes.preencherDocumentos" />
		<transition on="dirs-nok" to="servicoindisponivel" />
		<transition on-exception="java.lang.OutOfMemoryError" to="servicoindisponivel" />
	</action-state>
	
	<!-- 3. Resumo da Reclamacao  -->
	<view-state id="gestaoReclamacoes.resumo" view="ipdms.gestaoReclamacoes.resumo">
		<transition on="prev" to="gestaoReclamacoes.preencherDocumentos"><!-- gestaoReclamacoes.adicionarDocumentos -->
			<action bean="gestaoReclamacoesFormAction" method="bind" />
		</transition>
		<transition on="next" to="gestaoReclamacoes.gravar" />
	</view-state>
	
	<!-- 4. Gravação da Reclamacao  -->
	<action-state id="gestaoReclamacoes.gravar">
		<action bean="gestaoReclamacoesFormAction" method="save" /><!-- suspend -->
		<transition on="success" to="gestaoReclamacoes.relatorio"/>
		<transition on="save-error" to="gestaoReclamacoes.resumo"/>
		<transition on="error" to="gestaoReclamacoes.resumo"/>
	</action-state>
	
	<!-- 5. Relatório da Reclamacao  -->
	<view-state id="gestaoReclamacoes.relatorio"  view="ipdms.gestaoReclamacoes.relatorio" >
		<transition on="next" to="gestaoReclamacoes.concluir">
			<action bean="gestaoReclamacoesFormAction" method="bind" />
		</transition>
	</view-state>
	
	<!-- ECRÃS FINAIS -->
	<end-state id="gestaoReclamacoes.concluir" view="externalRedirect:${flowScope.referer}" />
	<end-state id="gestaoReclamacoes.cancelar" view="externalRedirect:${flowScope.referer}" />
	
	<global-transitions>
		<transition on="cancel" to="gestaoReclamacoes.cancelar" />
	</global-transitions>
	
</flow>