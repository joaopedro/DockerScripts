<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
	"http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>

	<bean id="perguntaLoginGuichetRepository" class="com.sinfic.ipdms.persistence.repository.hibernate.GenericPersistentEntityRepository" parent="ipdmsrepository">
		<constructor-arg type="java.lang.Class" value="com.sinfic.guichetelectronico.domain.entity.PerguntaLoginGuichet" />
	</bean>

	<bean id="resetPwdConfirmationRepository" class="com.sinfic.ipdms.persistence.repository.hibernate.ResetPwdConfirmationRepository" parent="ipdmsrepository"/>
	
	<bean id="registrationConfirmationRepository" class="com.sinfic.ipdms.persistence.repository.hibernate.RegistrationConfirmationRepository" parent="ipdmsrepository"/>

    <!--##################################-->
    <!--##### Begin of Service Beans #####-->
    <!--##################################-->

    <bean id="dadosPessoaisService" class="com.sinfic.guichetelectronico.secure.service.DadosPessoaisService">
        <property name="mailSender" ref="guichetMailSender"/>
    </bean>

    <bean id="noticiaGuichetService" class="com.sinfic.guichetelectronico.publico.service.NoticiaGuichetService" />

    <bean id="loginService" class="com.sinfic.guichetelectronico.publico.service.LoginService">
        <property name="actionPath">
            <value>/guichetelectronico/publico/resetPasswordConfirmation.do2</value>
        </property>
        <property name="mailSender" ref="guichetMailSender"/>
    </bean>

    <!--##################################-->
    <!--###### End of Service Beans ######-->
    <!--##################################-->

</beans>
